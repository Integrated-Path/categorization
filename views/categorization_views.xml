<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
<!-- tree view -->

        <record id="stock_valuation_layer_tree_views" model="ir.ui.view">
            <field name="name">stock_valuation_layer_tree</field>
            <field name="model">stock.valuation.layer</field>
            <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_category" />
                    <field name="partner_category" />
                </xpath>
            </field>
        </record>

        <record id="stock_move_tree_views" model="ir.ui.view">
            <field name="name">stock_move_tree_views</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="product_category" />
                    <field name="partner_category" />
                </xpath>
            </field>
        </record>

        <record id="stock_picking_tree_views" model="ir.ui.view">
            <field name="name">stock_picking_tree_views</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="partner_category" />
                </xpath>
            </field>
        </record>

        <record id="sale_order_tree_views" model="ir.ui.view">
            <field name="name">sale_order_tree_views</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="partner_category" />
                </xpath>
            </field>
        </record>

        <record id="purchase_order_tree_views" model="ir.ui.view">
            <field name="name">purchase_order_tree_views</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="partner_category" />
                </xpath>
            </field>
        </record>

        <record id="account_move_bill_inovice_tree_views" model="ir.ui.view">
            <field name="name">account_move_tree_views</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="partner_category" />
                </xpath>
            </field>
        </record>

          <record id="account_move_tree_views" model="ir.ui.view">
            <field name="name">account_move_tree_views</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="partner_category" />
                </xpath>
            </field>
        </record>

        <!-- form view -->
        <record id="sale_order_form_views" model="ir.ui.view">
            <field name="name">sale_order_form_views</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="vendor_location" />
                    <field name="customer_location" />
                    <field name="customer_company" />
                    <field name="district" />
                </xpath>
            </field>
        </record>

        <record id="purchase_order_form_views" model="ir.ui.view">
            <field name="name">purchase_order_form_views</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="vendor_location" />
                    <field name="customer_location" />
                    <field name="customer_company" />
                    <field name="district" />
                </xpath>
            </field>
        </record>

        <record id="stock_picking_form_views" model="ir.ui.view">
            <field name="name">stock_picking_form_views</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="after">
                    <field name="vendor_location" />
                    <field name="customer_location" />
                    <field name="customer_company" />
                    <field name="district" />
                </xpath>
            </field>
        </record>

        <record id="account_move_form_views" model="ir.ui.view">
            <field name="name">account_move_form_views</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="vendor_location" />
                    <field name="customer_location" />
                    <field name="customer_company" />
                     <field name="district_id" />

                </xpath>
            </field>
        </record>

        <record id="account_payment_form_views" model="ir.ui.view">
            <field name="name">account_payment_form_views</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="vendor_location" />
                    <field name="customer_location" />
                    <field name="customer_company" />  
                    <field name="district_id" />
                </xpath>
            </field>
        </record>

    </data>
    

</odoo>
